{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "mkdir debug build folder",
            "type": "shell",
            "command": "mkdir cmake-build-debug",
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "cmake generate debug",
            "type": "shell",
            "command": "cmake -G \"Unix Makefiles\" ../",
            "options": {
                "cwd": "${workspaceRoot}/cmake-build-debug"
            }
        },
        {
            "label": "build & run exp_matrix",
            "type": "shell",
            "command": "cmake --build . --config Debug --target exp_matrix && ./experiments/exp_matrix",
            "options": {
                "cwd": "${workspaceRoot}/cmake-build-debug"
            },
            "presentation": {
                "reveal": "always"
            },
            "dependsOn": [
                "cmake generate debug"
            ],
            "problemMatcher": []
        }
    ]
}